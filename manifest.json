{
  "manifest_version": 3,
  "name": "Layout Grid Visualizer",
  "version": "1.0",
  "description": "A Chrome extension to visualize and customize grid layouts on webpages",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
